<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.DetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="@color/black"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtPostDesc" >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black">


                    <TextView
                        android:id="@+id/copyRight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:textSize="12dp"
                        android:text="Copyright Â© 2021 Indian News Room. All Right Reserved"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <LinearLayout
                        android:id="@+id/linearLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintEnd_toEndOf="@+id/copyRight"
                        app:layout_constraintStart_toStartOf="@+id/copyRight"
                        app:layout_constraintTop_toBottomOf="@+id/copyRight">

                        <TextView
                            android:id="@+id/txtHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="Home" />

                        <TextView
                            android:id="@+id/txtaboutus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textSize="12dp"
                            android:textColor="@color/white"
                            android:text="About Us" />


                        <TextView
                            android:id="@+id/txtcontact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Contact Us" />

                        <TextView
                            android:id="@+id/txtDisc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Disclaimer" />

                        <TextView
                            android:id="@+id/txtPolicy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Privacy Policy" />


                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/linearLayout2"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginTop="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout">

                        <TextView
                            android:id="@+id/txtTerms"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Terms &amp; Conditions" />

                        <TextView
                            android:id="@+id/txtFollowUs"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Follow Us" />


                        <TextView
                            android:id="@+id/txtWork"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Work with Us" />

                        <TextView
                            android:id="@+id/txtSite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:textColor="@color/white"
                            android:textSize="12dp"
                            android:text="Site Map" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginBottom="16dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/linearLayout2"
                        app:layout_constraintStart_toStartOf="@+id/linearLayout2"
                        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                        <ImageView
                            android:id="@+id/imgFacebook"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_fb"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/imgTwit"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_twitter"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/imgYt"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_youtube"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/imgInsta"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_insta"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/imgPlay"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_store"
                            app:tint="@color/white" />

                        <ImageView
                            android:id="@+id/imgFeed"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginLeft="6dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/ic_feed"
                            app:tint="@color/white" />


                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/txtPostDesc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/hind"
                android:text="Post Description Hello there my friends , how are you"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/txtUploadTime"
                app:layout_constraintTop_toBottomOf="@+id/txtUploadTime" />

            <ImageView
                android:id="@+id/imgPostPoster"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:srcCompat="@tools:sample/avatars" />

            <ImageView
                android:id="@+id/imgBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_backward" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/titlecard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black"
                android:backgroundTint="@color/websiteBlack"
                app:cardCornerRadius="0dp"
                app:layout_constraintTop_toBottomOf="@+id/imgPostPoster">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txtPostTitl"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/hind_medium"

                        android:text="Post Title"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/txtUploadTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/hind"
                android:text="26 November 2000"
                android:textColor="@color/websiteBlack"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="@+id/titlecard"
                app:layout_constraintTop_toBottomOf="@+id/titlecard" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>